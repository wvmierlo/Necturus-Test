<p><lg type="stanza" n="01">

<note n="A_M1_01_000">Line_number 000 is missing</note>
<lb n="1" xml:id="Af112rb.1"/><l n="A_M1_01_001"><hi rend="capitalsize4">V</hi>Vaphene <choice><abbr>m<g ref="#apomod"/>tin</abbr><expan>m<ex>ar</ex>tin</expan></choice> hoe salt gaen</l>
<lb n="2" xml:id="Af112rb.2"/><l n="A_M1_01_002"><hi rend="capitalsize1">S</hi>al die <choice><abbr>w<g ref="#apomod"/>elt</abbr><expan>w<ex>eer</ex>elt</expan></choice> hiet <choice><abbr>la<g ref="#bar"/>ghe</abbr><expan>la<ex>n</ex>ghe</expan></choice> <choice><abbr>stae<g ref="#bar"/></abbr><expan>stae<ex>n</ex></expan></choice></l>
<lb n="3" xml:id="Af112rb.3"/><l n="A_M1_01_003"><hi rend="capitalsize1">I</hi>n dus <choice><abbr>crancke<g ref="#bar"/></abbr><expan>crancke<ex>n</ex></expan></choice> loue</l>
<lb n="4" xml:id="Af112rb.4"/><l n="A_M1_01_004"><hi rend="capitalsize1">S</hi>o moet <choice><abbr>v<hi rend="superscript">o</hi>uwe</abbr><expan>v<ex>ro</ex>uwe</expan></choice> <choice><abbr>v<g ref="#apomod"/>eere</abbr><expan>v<ex>er</ex>eere</expan></choice> saen</l>
<lb n="5" xml:id="Af112rb.5"/><l n="A_M1_01_005"><choice><abbr>Sond<g ref="#apomod"/></abbr><expan>Sond<ex>er</ex></expan></choice> twifel ende waen</l>
<lb n="6" xml:id="Af112rb.6"/><l n="A_M1_01_006"><hi rend="capitalsize1">R</hi>umen <choice><abbr>he<g ref="#apomod"/>en</abbr><expan>he<ex>er</ex>en</expan></choice> houe</l>
<lb n="7" xml:id="Af112rb.7"/><l n="A_M1_01_007"><hi rend="capitalsize1">I</hi>c zie <choice><abbr>de<g ref="#bar"/></abbr><expan>de<ex>n</ex></expan></choice> <choice><abbr>valsche<g ref="#bar"/></abbr><expan>valsche<ex>n</ex></expan></choice> wel ontfaen</l>
<lb n="8" xml:id="Af112rb.8"/><l n="A_M1_01_008"><hi rend="capitalsize1">D</hi>ie de <choice><abbr>he<g ref="#apomod"/>en</abbr><expan>he<ex>er</ex>en</expan></choice> <choice><abbr>cone<g ref="#bar"/></abbr><expan>cone<ex>n</ex></expan></choice> dwaen</l>
<lb n="9" xml:id="Af112rb.9"/><l n="A_M1_01_009"><choice><abbr><hi rend="capitalsize1">E</hi>n<g ref="#bar"/></abbr><expan><hi rend="capitalsize1">E</hi>n<ex>de</ex></expan></choice> <choice><abbr>plucke<g ref="#bar"/></abbr><expan>plucke<ex>n</ex></expan></choice> <choice><abbr>vande<g ref="#bar"/></abbr><expan>vande<ex>n</ex></expan></choice> stoue</l>
<lb n="10" xml:id="Af112rb.10"/><l n="A_M1_01_010"><choice><abbr><hi rend="capitalsize1">E</hi>n<g ref="#bar"/></abbr><expan><hi rend="capitalsize1">E</hi>n<ex>de</ex></expan></choice> ic zie <choice><abbr>de<g ref="#bar"/></abbr><expan>de<ex>n</ex></expan></choice> <choice><abbr>rechte<g ref="#bar"/></abbr><expan>rechte<ex>n</ex></expan></choice> slaen</l>
<lb n="11" xml:id="Af112rb.11"/><l n="A_M1_01_011"><hi rend="capitalsize1">B</hi>eede <choice><abbr>bespotte<g ref="#bar"/></abbr><expan>bespotte<ex>n</ex></expan></choice> <choice><abbr>en<g ref="#bar"/></abbr><expan>en<ex>de</ex></expan></choice> beuaen</l>
<lb n="12" xml:id="Af112rb.12"/><l n="A_M1_01_012"><hi rend="capitalsize1">A</hi>lse die meese in de cloue</l>
<lb n="13" xml:id="Af112rb.13"/><l n="A_M1_01_013"><hi rend="capitalsize1">R</hi>echts offene god <choice><abbr>v<g ref="#apomod"/>scroue</abbr><expan>v<ex>er</ex>scroue</expan></choice></l>
</lg>
